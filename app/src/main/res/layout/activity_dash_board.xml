<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.flightish.ui.DashBoardActivity"
    android:background="#ecf0f1">
        <TextView
            android:id="@+id/userName"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dip"
            android:textSize="20dp"
            android:background="#c0392b"
            android:textColor="#ffffff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:padding="10dp"
        android:textAlignment="center"

        android:id="@+id/countdown"
        android:layout_below="@+id/userName"
        android:layout_centerHorizontal="true"
        android:textSize="80dp"
        android:background="#e74c3c"
        android:textColor="#ecf0f1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/flightStatus"
        android:layout_below="@+id/countdown"
        android:layout_alignStart="@+id/countdown"
        android:textAlignment="center"
        android:background="#c0392b"
        android:textColor="#ffffff"
        android:padding="2dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/baggage"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:background="#c0392b" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/orders"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/baggage"
        android:layout_below="@+id/flightStatus" />

</RelativeLayout>
